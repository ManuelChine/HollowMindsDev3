@page
@model HollowMindsDev.BackEnd.WebApp.Pages.Shared.addUserModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add User</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="/css/addUserLoginStyle.css">
</head>
<body>
    <div class="container">
        <br>
        <br>

        <div class="card bg-light">
            <article class="card-body mx-auto" style="max-width: 400px;">
                <h4 class="card-title mt-3 text-center">Create Account</h4>
                <form>
                    <div class="form-group input-group">
                        <input name="Name" id="name" class="form-control" placeholder="Name" type="text">
                    </div> <!-- form-group// -->
                    <div class="form-group input-group">
                        <input name="Surname" id="surname" class="form-control" placeholder="Surname" type="text">
                    </div> <!-- form-group// -->
                    <div class="form-group input-group">
                        <input name="Mail" class="form-control" placeholder="Email address" type="email">
                    </div> <!-- form-group// -->
                    <div class="form-group input-group">
                        <select name="IsAdmin" class="custom-select">
                            <option selected value="0">Not Admin</option>
                            <option value="1">Admin</option>
                        </select>

                    </div> <!-- form-group// -->
                    <div class="form-group input-group">
                        <input name="Password" class="form-control" placeholder="Create password" type="password">
                    </div> <!-- form-group// -->
                    <div class="form-group input-group">
                        <input name="PasswordRep" class="form-control" placeholder="Repeat password" type="password">
                    </div> <!-- form-group// -->
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary btn-lg" value="Confirm" asp-page-handler="Submit">
                        <input type="reset" class="btn btn-secondary btn-lg" value="Reset">
                    </div> <!-- form-group// -->

                </form>
            </article>
        </div> <!-- card.// -->

    </div>
    <!--container end.//-->

</body>
</html>